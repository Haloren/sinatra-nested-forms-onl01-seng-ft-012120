<h1> Pirates </h1>
    <div>
    <h2> Name: <%= @pirate.name %> </h2>
    <h2> Height: <%= @pirate.height %></h2>
    <h2> Weight: <%= @pirate.weight %></h2>
    </div>

<h1> Ships </h1>
    <% @ships.each do |ship| %>
    
    <div>
    <h2> Name: <%= ship.name %> </h2>
    <h2> Type: <%= ship.type %> </h2>
    <h2> Booty: <%= ship.booty %> </h2>
    </div>
    <% end %> 